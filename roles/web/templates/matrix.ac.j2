server {
        listen 80;
        server_name localhost matrix.ac www.matrix.ac;

        #ssl_certificate     /etc/letsencrypt/live/matrix.ac/fullchain.pem;
        #ssl_certificate_key /etc/letsencrypt/live/matrix.ac/privkey.pem;

        limit_req      zone=one burst=10 nodelay;

        location ~ ^/~(.+?)(/.*)?$ {
                alias /home/$1/public_html$2;
        }

        location / {
                root /var/www/html/;
                autoindex on;
        }
        
        location /registration/ {
                proxy_pass	http://localhost:8080/;
                access_log	/var/log/nginx/gsh.access.log;
                error_log	/var/log/nginx/gsh.error.log;
        }
}
